<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahul.serverupdation.EditActivity">

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="35dp"
        android:text="Name"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Name"
        android:layout_alignBottom="@+id/Name"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:id="@+id/EnterName" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Name"
        android:layout_alignStart="@+id/Name"
        android:layout_below="@+id/EnterName"
        android:layout_marginTop="22dp"
        android:textSize="20dp"
        android:text="Email" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignLeft="@+id/EnterName"
        android:layout_alignStart="@+id/EnterName"
        android:layout_alignRight="@+id/EnterName"
        android:layout_alignEnd="@+id/EnterName"
        android:id="@+id/EnterEmail"
        android:hint="Enter Your Email"
        />

    <TextView
        android:id="@+id/Phone"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Email"
        android:layout_alignStart="@+id/Email"
        android:layout_below="@+id/EnterEmail"
        android:layout_marginTop="24dp"
        android:text="Phone" />
    <EditText
        android:id="@+id/EnterPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Phone"
        android:layout_alignBottom="@+id/Phone"
        android:layout_alignLeft="@+id/EnterEmail"
        android:layout_alignStart="@+id/EnterEmail"
        android:layout_alignRight="@+id/EnterEmail"
        android:layout_alignEnd="@+id/EnterEmail"
        android:hint="Enter Your Phone"/>

    <Button
        android:id="@+id/Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EnterPhone"
        android:layout_marginTop="32dp"
        android:text="Edit Profile"
        android:layout_alignRight="@+id/EnterPhone"
        android:layout_alignEnd="@+id/EnterPhone"
        android:layout_alignLeft="@+id/Phone"
        android:layout_alignStart="@+id/Phone" />


</RelativeLayout>