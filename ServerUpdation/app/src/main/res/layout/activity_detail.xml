<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahul.serverupdation.DetailActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="30sp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="119dp"
        android:id="@+id/name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="30sp"
        android:id="@+id/show_name"
        android:textColor="@color/colorPrimaryDark"
        android:layout_alignBaseline="@+id/name"
        android:layout_alignBottom="@+id/name"
        android:layout_alignStart="@+id/show_email" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:text="Email:"
        android:textSize="30sp"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_email"
        android:text="Your Email"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_above="@+id/mobile_no"
        android:layout_toEndOf="@+id/mobile_no"
        android:layout_marginStart="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mobile_no"
        android:textSize="30sp"
        android:text="MobNo."
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="27dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_mob"
        android:text="Your Mob"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/mobile_no"
        android:layout_alignBottom="@+id/mobile_no"
        android:layout_alignStart="@+id/show_email"
        android:textColor="@color/colorPrimaryDark"/>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:padding="12dp"
        android:text="Edit UserProfile"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
